            "from puutarha order by puutarhaId"
        ],
        "puutarhalista":[
            "select puutarhaId, puutarhanNimi from puutarha"
        ],
        "puutarhanKukat":[
            "select puutarhanNimi,kukanNimi, varasto,", 
            "yksikkohinta from puutarha",
            "natural join puutarhan_kukat",
            "natural join kukka",
            "where puutarhaId=?",
            "order by kukanNimi asc"
        ],
        "lisaaAsiakas":[
            "insert into asiakas (asiakasId, etunimi, sukunimi, osoite)",
            "values(?,?,?,?)"
        ],
        "lisaaTilaus":[
            "insert into tilaus (tilausId, asiakasId, tilauspvm)",
            "values (?,?,?)"
        ],
        "lisaaTilausrivi":[
            "insert into tilauksen_kukat (tilausId, kukkaId, puutarhaId, lkm, hinta)",
            "values(?,?,?,?,?)"
        ],
        "kukkalista": [
            "select kukkaId,kukanNimi from kukka",
            "natural join puutarhan_kukat",
            "where puutarhaId=?",
            "order by kukanNimi asc"
        ],
